<%- include ("./partials/header.ejs") %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h3 class="text-xl">Create a new post.</h3>
    <hr class="opacity-20 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="text-black block w-1/3 px-2 py-3" type="file" name="postimage">
        <input class="text-black block w-1/3 px-2 py-3 border-2 rounded-md mt-3" type="text" name="title" placeholder="Title">
        <textarea class="text-black block w-1/3 px-2 py-3 border-2 rounded-md mt-3 h-60" type="text" name="description" placeholder="Description"></textarea>
        <input class="block w-1/3 px-2 py-3 bg-red-600 hover:bg-red-800 rounded-md mt-3" type="submit" value="Create Post">
    </form>
</div>


<%- include ("./partials/footer.ejs") %>